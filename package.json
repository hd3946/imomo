{
  "name": "imomo-turborepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:portfolio": "turbo run build --filter=portfolio",
    "dev": "turbo run dev",
    "dev:portfolio": "turbo run dev --filter=portfolio",
    "dev:web": "turbo run dev --filter=web",
    "dev:vite-web": "turbo run dev --filter=vite-web",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.5.0",
    "turbo": "^2.4.2",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
